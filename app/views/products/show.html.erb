<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
    </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <%if (current_user)%>
    <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

    <h2> Write a review </h2>
    <%= form_for([@product, @review]) do |form| %>
      <div class="form-group">
      <div class = "btn btn-primary" style="color:black;">
        <%= form.label :description %>
        </div>
        <%= form.text_area :description, id: :review_description, class: 'form-control' %>
      </div>

      <div class="form-group">
      <div class = "btn btn-primary" style="color:black;">
        <%= form.label :rating %>
        </div>
        <%= form.select :rating, [1, 2, 3, 4, 5], class: 'form-control' %>
      </div>
      <div class = "btn btn-primary" style="color:black;">
        <%= form.submit %>
        </div>
      <%end%>
    <% end %>

</div>
</div>
  <div class="reviews">
       <h2> Reviews</h2>
    <%= render @product.reviews.order(created_at: :desc) %>
  </div>

  </article>

</section>
